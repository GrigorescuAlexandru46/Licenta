@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "w-100" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav ml-auto justify-content-end ">
            <li class="nav-item active text-center mx-2">
                <a class="nav-link  px-0 mx-0" style="font-size: 0.9rem !important;">Logged in as<br/>@User.Identity.GetUserName()</a>
            </li>
            <li class="nav-item text-center mx-2 d-none d-xl-block">
                <a href="/Profile/ShowOwnProfile" class="nav-link"><i class="fa fa-user" aria-hidden="true" style="font-size: 2rem;"></i><span class="d-none d-lg-block">My profile</span></a>
            </li>
            <li class="nav-item mx-2 d-xl-none">
                <a href="/Profile/ShowOwnProfile" class="nav-link"><i class="fa fa-user mr-4 pl-1" aria-hidden="true" style="font-size: 2rem;"></i><span class="d-inline pl-2">My profile</span></a>
            </li>
            <li class="nav-item text-center mx-2 d-none d-xl-block">
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link"><i class="fa fa-sign-out" aria-hidden="true" style="font-size: 2rem;"></i><span class="d-none d-lg-block">Log out</span></a>
            </li>
            <li class="nav-item mx-2 d-xl-none">
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link"><i class="fa fa-sign-out mr-4 pl-1" aria-hidden="true" style="font-size: 2rem;"></i><span class="d-inline">Log out</span></a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto mr-5">
        <li class="nav-item active">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </li>
    </ul>
}
