@if (ViewBag.UserIsProfileOwner)
{
    ViewBag.Title = "My polls";
}
else
{
    ViewBag.Title = "Polls of " + ViewBag.Profile.FirstName + " " + ViewBag.Profile.LastName;
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h5 class="mb-0">@ViewBag.message</h5>
    </div>
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (ViewBag.PollsList.Count == 0)
{
    if (ViewBag.UserIsProfileOwner)
    {
        <div class="list-group">
            <div class="list-group-item bg-light">
                <div class="row justify-content-center">
                    <h4 class="my-3 font-weight-bold text-justify">You currently have no polls</h4>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="list-group">
            <div class="list-group-item bg-light">
                <div class="row justify-content-center">
                    <h4 class="my-3 font-weight-bold text-justify">@ViewBag.Profile.FirstName @ViewBag.Profile.LastName has no polls</h4>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="list-group">
        @foreach (var poll in ViewBag.PollsList)
        {
            <a href="/Poll/Show/@poll.PollId" class="list-group-item list-group-item-action bg-light">
                <div class="row">
                    <div class="col-1 my-2">
                        <i class="fas fa-clipboard-list text-primary" style="font-size: 2.5rem;"></i>
                    </div>
                    <div class="col-10 col-sm-11 col-lg-9 col-xl-7">
                        <h4 class="mb-0 mt-2 pt-2 font-weight-bold text-justify">@poll.Name</h4>
                    </div>
                    <div class="col-5 col-sm-4 col-md-3 col-lg-2 d-inline-flex">
                        @if (ViewBag.PollsState[poll.PollId])
                        {
                            <i class="fas fa-toggle-on mt-2 mr-3 text-primary" style="font-size: 2.5rem;"></i>
                            <h5 class="mb-0 mt-2 pt-2">Active</h5>
                        }
                        else
                        {
                            <i class="fas fa-toggle-off mt-2 mr-3" style="font-size: 2.5rem;"></i>
                            <h5 class="mb-0 mt-2 pt-2">Inactive</h5>
                        }
                    </div>

                    <div class="col-5 col-sm-4 col-md-3 col-xl-2 offset-1 offset-sm-4 offset-md-6 offset-lg-10 offset-xl-0">
                        <span class="badge badge-primary badge-pill mt-3">Created at: <br /> @poll.CreationDate</span>
                    </div>
                </div>
            </a>
        }
    </div>
}