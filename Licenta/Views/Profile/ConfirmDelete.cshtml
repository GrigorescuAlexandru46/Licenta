
<br />

<div class="card bg-light">
    <div class="card-header">
        <h2 class="card-title mb-0">Confirmation</h2>
    </div>
    <div class="card-body">
        <div class="row pl-2">
            <div class="col-xl-9">
                <div class="row">
                    <div class="col-xl-12">
                        <h3>Are you sure that you want to delete this account?</h3>
                    </div>
                    <div class="col-xl-12 mt-3">
                        <h6>All the polls created by this account will also be deleted.<br />Note that this action will make irreversible changes.</h6>
                    </div>
                    <div class="col-xl-12 mt-5">
                        <div class="row">
                            <div class="col-md-4 col-6">
                                <form action="/profile/delete/@Model.ProfileId" method="post">
                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                    <button type="submit" class="btn btn-danger btn-block btn-lg">Delete account</button>
                                </form>
                            </div>
                            <div class="col-md-4 offset-xl-2 col-6 offset-md-4 offset-xs-0">
                                @Html.ActionLink("Back to profile", "Show", "Profile", new { id = Model.ProfileId }, new { @class = "btn btn-info btn-block btn-lg" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 d-none d-xl-block">
                <i class="fas fa-minus-circle" style="font-size: 12rem;"></i>
            </div>
        </div>
    </div>
</div>

