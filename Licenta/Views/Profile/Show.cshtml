@model Licenta.Models.Profile
@{
    ViewBag.Title = "Profile of " + Model.FirstName;
}

<h1>@ViewBag.Title</h1>


<hr />

<div class="panel panel-primary">
    <div class="panel-heading">Personal details</div>

    <div class="panel-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="col-lg-2 control-label">First Name :</label>
                    <label class="col-lg-2 control-label">@Model.FirstName</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Last Name :</label>
                    <label class="col-lg-2 control-label">@Model.LastName</label>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Age :</label>
                    <label class="col-lg-2 control-label">@Model.Age</label>
                </div>
            </fieldset>
        </form>
    </div>

</div>

<div class="panel panel-primary">
    <div class="panel-heading">Description</div>

    <div class="panel-body">
        <p>@Model.Description</p>
    </div>

</div>


