
@{
    ViewBag.Title = "List of all profiles";
}

<h2>@ViewBag.Title</h2>
<hr />


<div class="list-group">
    @foreach (var profile in ViewBag.ProfilesList)
    {
    <a href="/Profile/Show/@profile.ProfileId" class="list-group-item">
        <label class="badge label label-default">
            Created at:
            <br/>
            @profile.CreationDate
        </label>
        <h4>@profile.FirstName @profile.LastName</h4>
        <p>@profile.Email</p>
    </a>
    }
</div>

