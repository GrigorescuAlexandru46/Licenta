@model Licenta.Models.Poll

@{
    ViewBag.Title = "FinishStart";
}

<hr />

<div class="jumbotron">
    <div class="row">
        <h1 class="col-lg-12">Poll successfully stopped</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <br /><br /><br />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-11 col-lg-offset-0">
            <h4>You are now able to see the final results.</h4>
            <h6>Select an option from below.</h6>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-lg-2">
            @Html.ActionLink("Visualize results", "Results", "Poll", null, new { @class = "btn btn-block btn-success" })
        </div>
        <div class="col-lg-3 col-lg-offset-2">
            @Html.ActionLink("Return to poll preview", "Show", "Poll", new { id = Model.PollId }, new { @class = "btn btn-block btn-info" })
        </div>
        <div class="col-lg-3 col-lg-offset-2">
            @Html.ActionLink("Return to home page", "Index", "Home", null, new { @class = "btn btn-block btn-info" })
        </div>
    </div>
</div>

