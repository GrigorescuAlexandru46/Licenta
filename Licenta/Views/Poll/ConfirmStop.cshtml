@model Licenta.Models.Poll

@{
    ViewBag.Title = "Confirm poll stop";
}

<br />

<div class="card bg-light">
    <div class="card-header">
        <h2 class="mb-0">Confirmation</h2>
    </div>
    <div class="card-body ml-2">
        <div class="row">
            <div class="col-12">
                <h4>Are you sure that you want to stop this poll?</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h6>
                    Once you stop the poll, it can no longer be filled to collect results. <br /><br />

                    After stopping, you will be provided a link where you can visualize the results. <br />
                    The link can also be accessed anytime from the preview page of the poll.
                </h6>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 mb-3 mb-lg-0 col-lg-6">
                @using (Html.BeginForm("Stop", "Poll", new { id = Model.PollId }, FormMethod.Post, null))
                {
                    <button type="submit" class="btn btn-block btn-lg btn-success"><h4 class="d-inline mr-4">I am sure, stop the poll</h4><i class="fas fa-check d-none d-md-inline" aria-hidden="true" style="font-size: 1.6rem;"></i></button>
                }
            </div>
            <div class="col-12 col-lg-6">
                <a href="/Poll/Show/@Model.PollId" class="btn btn-block btn-warning btn-lg"><h4 class="d-inline mr-4">I've changed my mind</h4><i class="fas fa-undo d-none d-md-inline" aria-hidden="true" style="font-size: 1.6rem;"></i></a>
            </div>
        </div>
    </div>
</div>



